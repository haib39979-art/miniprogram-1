.page {
  min-height: 100vh;
  background: #ffffff;
  padding: 40rpx 32rpx 160rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 56rpx;
  color: #6d241e; /* Reddish brown */
  font-weight: 600;
  display: block;
  margin-bottom: 10rpx;
}

.date-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.date-text {
  font-size: 28rpx;
  color: #8d7b72;
}

.divider {
  width: 2rpx;
  height: 24rpx;
  background: #ccc;
}

.tags-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.tag {
  padding: 8rpx 24rpx;
  background: #dcc8c3;
  color: #5e413c;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.recipe-card {
  background: #eee3db;
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.card-image-wrap {
  width: 240rpx;
  height: 240rpx;
  border-radius: 24rpx;
  overflow: hidden;
  flex: 0 0 auto;
}

.card-image {
  width: 100%;
  height: 100%;
  mix-blend-mode: multiply;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 36rpx;
  color: #4a1a16;
  font-weight: 600;
}

.favorite-icon {
  font-size: 40rpx;
  color: #8b5a56;
  line-height: 1;
}

.benefits-list {
  margin-bottom: 24rpx;
}

.benefit-item {
  font-size: 26rpx;
  color: #4a1a16;
  line-height: 1.6;
  font-weight: 500;
}

.suitable-row {
  font-size: 24rpx;
  color: #4a1a16;
}

.checkin-section {
  margin-top: 20rpx;
}

.checkin-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.checkin-title {
  font-size: 40rpx;
  color: #4a1a16;
  font-weight: 600;
}

.camera-icon {
  font-size: 48rpx;
  color: #4a1a16;
}

.checkin-card {
  background: #efe3dd;
  border-radius: 24rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed transparent;
}

.checkin-card.checked {
  background: #dbece5;
  border-color: #7abfa3;
}

.checkin-text {
  font-size: 48rpx;
  color: #d1bbae;
  font-weight: 500;
}

.checked .checkin-text {
  color: #5a8f7b;
}

.checkin-image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}