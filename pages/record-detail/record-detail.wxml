<view class="page">
  <view class="nav-bar">
    <view class="close-btn" bindtap="onBack">×</view>
  </view>

  <view class="content">
    <image 
      class="record-image" 
      src="{{record.imageUrl}}" 
      mode="aspectFit" 
      bindtap="onPreviewImage"
    />
    
    <view class="info-bar">
      <text class="date-text">打卡时间：{{record.date}}</text>
      <view class="delete-btn" bindtap="onDelete">
        <text class="delete-icon">🗑️</text>
        <text>取消收藏</text>
      </view>
    </view>
  </view>
</view>