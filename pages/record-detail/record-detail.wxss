.page {
  height: 100vh;
  background: #000;
  display: flex;
  flex-direction: column;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  padding-top: env(safe-area-inset-top);
  z-index: 100;
  display: flex;
  align-items: center;
  padding-left: 32rpx;
}

.close-btn {
  font-size: 80rpx;
  color: #fff;
  line-height: 1;
  padding: 20rpx;
  margin-top: 140rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.record-image {
  width: 100%;
  height: 80vh;
}

.info-bar {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}

.date-text {
  font-size: 28rpx;
  opacity: 0.8;
}

.delete-btn {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.delete-icon {
  margin-right: 8rpx;
  font-size: 30rpx;
}