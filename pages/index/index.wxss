/**index.wxss**/
page {
  height: 100vh;
}

.page {
  height: 100vh;
  background: #f6f2ef;
}

.content {
  height: 100vh;
  padding: 178rpx 32rpx 0; /* Adjusted for custom nav (approx 88rpx nav + 50rpx status + 40rpx padding) */
  box-sizing: border-box;
}

.topbar {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 16rpx 0 28rpx;
}

.topbar-weather {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 10rpx; /* Increase touch area */
  position: relative;
  z-index: 10; /* Ensure it's on top */
}

.topbar-title {
  font-size: 40rpx;
  color: #2d2d2d;
  letter-spacing: 1rpx;
  white-space: nowrap;
  flex: 0 0 auto;
}

/* Weather Icon SVG */
.weather-icon-svg {
  width: 80rpx;
  height: 80rpx;
  margin-left: 10rpx;
}

.icon-btn {
  padding: 0;
  background: transparent;
  border: 0;
  line-height: 1;
}

.icon-btn::after {
  border: 0;
}

.icon-text {
  font-size: 56rpx;
  color: #3b3b3b;
  line-height: 1;
  display: block;
}

.icon-text.active {
  color: #CC7979;
}

.hero-card {
  position: relative;
  background: #efe6dd;
  border-radius: 18rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.hero-actions-right {
  /* No extra margin needed when centered above */
}

.hero-main {
  display: flex;
  gap: 16rpx;
  padding-top: 0;
  align-items: stretch;
}

.hero-left {
  width: 340rpx; /* Slightly wider to match 1:1 look */
  flex-shrink: 0;
}

.herb-image-wrap {
  background: #d9cfbf;
  border-radius: 16rpx;
  overflow: hidden;
  width: 100%;
  height: 100%; /* Fill the container height */
  min-height: 720rpx; /* Make it tall as in design */
  padding: 0; /* Remove padding to let image fill */
  box-sizing: border-box;
  position: relative;
}

.herb-image-inner {
  width: 100%;
  height: 100%;
  position: relative;
}

.herb-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* Magnifier Icon */
.magnifier-icon {
  position: absolute;
  bottom: 24rpx;
  left: 24rpx;
  width: 48rpx;
  height: 48rpx;
  opacity: 0.6;
}

/* Herb Name Row */
.hero-name-row {
  display: flex;
  align-items: baseline;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  padding-left: 0;
}

.hero-name-title {
  font-size: 64rpx;
  font-weight: 400;
  color: #1a1a1a;
  letter-spacing: 2rpx;
  line-height: 1;
}

.hero-name-alias {
  font-size: 32rpx;
  color: #555;
  font-weight: 300;
  margin-left: 16rpx;
  letter-spacing: 1rpx;
}

.magnifier-circle {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #5d4037;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.magnifier-plus {
  font-size: 28rpx;
  color: #5d4037;
  line-height: 1;
  font-weight: bold;
  margin-top: -2rpx;
}

.magnifier-handle {
  width: 4rpx;
  height: 14rpx;
  background: #5d4037;
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  transform: rotate(-45deg);
  transform-origin: bottom center;
}

.hero-right {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* Push info-box to bottom */
}

.date-section {
  display: flex;
  flex-direction: column;
  align-items: center; /* Center the date as in design? Or right aligned? Design looks centered relative to the right column */
  margin-bottom: 20rpx;
  padding-top: 0; /* Remove padding as heart is now inline */
}

.date-row {
  display: flex;
  align-items: baseline;
  line-height: 0.8;
}

.date-day {
  font-size: 160rpx; /* Huge date */
  color: #1a1a1a;
  font-weight: 400; /* Regular weight */
  letter-spacing: -4rpx;
}

.date-suffix {
  font-size: 48rpx;
  color: #1a1a1a;
  font-weight: 300;
  margin-left: 4rpx;
}

.lunar-text {
  font-size: 28rpx;
  color: #1a1a1a;
  text-align: center;
  margin-top: 16rpx;
  letter-spacing: 2rpx;
}

/* Info Box (Yi/Ji + Huangli) */
.info-box {
  background: #E5D8CA; /* Slightly darker beige */
  border-radius: 20rpx;
  padding: 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.yi-ji-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.yi-block, .ji-block {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.yi-header, .ji-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.dot-yi {
  background: #D37272; /* Muted Red */
}

.dot-ji {
  background: #9EA1A3; /* Gray */
}

.yi-label, .ji-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.yi-content, .ji-content {
  font-size: 28rpx;
  color: #555;
  font-weight: 500;
  padding-left: 32rpx; /* Indent under the label */
}

.huangli-wrap {
  margin-top: auto;
  border-radius: 12rpx;
  overflow: hidden;
  height: 180rpx; /* Adjust height */
  background: #fff;
  border: none;
}

/* Remove old styles that conflict */
.herb-title-row, .yi-ji, .yi-ji-row, .yi-ji-label, .yi-ji-items {
  display: none;
}

.huangli-image {
  width: 100%;
  height: 100%;
}

.huangli-placeholder {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 14rpx;
  box-sizing: border-box;
}

.huangli-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.huangli-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #2f7b45;
}

.huangli-title {
  font-size: 22rpx;
  color: #2f7b45;
  font-weight: 600;
}

.huangli-lines {
  margin-top: 12rpx;
}

.huangli-line {
  height: 10rpx;
  background: rgba(47, 123, 69, 0.18);
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.huangli-line.short {
  width: 70%;
}

.huangli-stamp {
  position: absolute;
  right: 12rpx;
  bottom: 12rpx;
  font-size: 22rpx;
  color: #2f7b45;
  border: 2rpx solid rgba(47, 123, 69, 0.45);
  border-radius: 12rpx;
  padding: 4rpx 10rpx;
  background: rgba(255, 255, 255, 0.5);
}
.hero-details {
  margin-top: 18rpx;
  background: rgba(255, 255, 255, 0.35);
  border-radius: 14rpx;
  padding: 16rpx 16rpx;
}

.detail-row {
  display: flex;
  gap: 12rpx;
  margin: 10rpx 0;
}

.bullet {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #c5e1a5;
  margin-top: 12rpx;
  flex: 0 0 auto;
}

.detail-text {
  font-size: 22rpx;
  color: #2f2f2f;
  line-height: 34rpx;
  flex: 1 1 auto;
}

.todos-header {
  margin-top: 22rpx;
  background: #efe6dd;
  border-radius: 18rpx;
  padding: 18rpx 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.todos-title {
  font-size: 28rpx;
  color: #2d2d2d;
  font-weight: 600;
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  padding: 0;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.6);
  color: #2d2d2d;
  font-size: 38rpx;
  line-height: 56rpx;
  text-align: center;
}

.add-btn::after {
  border: 0;
}

.todos-empty {
  padding: 24rpx 12rpx 0;
}

.todos-empty-text {
  font-size: 24rpx;
  color: #777;
}

.todos-list {
  padding: 18rpx 0 0;
}

.todo-item {
  padding: 24rpx 24rpx;
  background: #E9D9D2;
  border-radius: 18rpx;
  margin-top: 14rpx;
}

.todo-main {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.todo-text {
  font-size: 30rpx;
  color: #2d2d2d;
  font-weight: 500;
}

.todo-time {
  font-size: 24rpx;
  color: #888;
}

.todo-add-item {
  padding: 24rpx;
  background: #E9D9D2;
  border-radius: 18rpx;
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 40rpx;
}

.add-plus {
  font-size: 48rpx;
  color: #8b5a56;
  font-weight: 300;
  line-height: 1;
}

.bottom-spacer {
  height: 170rpx;
}

.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  padding-bottom: env(safe-area-inset-bottom);
  background: rgba(246, 242, 239, 0.98);
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  display: flex;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  color: #6a6a6a;
}

.tab-active {
  color: #2d2d2d;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  position: relative;
}

.tab-text {
  font-size: 20rpx;
  line-height: 1;
}

.tab-icon-today {
  border-radius: 12rpx;
  border: 2rpx solid currentColor;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.tab-icon-today-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: currentColor;
}

.tab-icon-calendar {
  border-radius: 12rpx;
  border: 2rpx solid currentColor;
  box-sizing: border-box;
  overflow: hidden;
}

.tab-icon-calendar-top {
  height: 12rpx;
  background: currentColor;
  opacity: 0.9;
}

.tab-icon-calendar-body {
  height: calc(100% - 12rpx);
  background: transparent;
}

.tab-icon-me {
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.tab-icon-me-head {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 2rpx solid currentColor;
  position: absolute;
  top: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
}

.tab-icon-me-body {
  width: 28rpx;
  height: 18rpx;
  border: 2rpx solid currentColor;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  border-bottom: 0;
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
}
