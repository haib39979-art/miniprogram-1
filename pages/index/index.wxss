/**index.wxss**/
page {
  height: 100vh;
}

.page {
  height: 100vh;
  background: #f6f2ef;
}

.content {
  height: 100vh;
  padding: 40rpx 32rpx 0;
  box-sizing: border-box;
}

.topbar {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 16rpx 0 28rpx;
}

.topbar-weather {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.topbar-title {
  font-size: 30rpx;
  color: #2d2d2d;
  letter-spacing: 1rpx;
  white-space: nowrap;
  flex: 0 0 auto;
}

.weather-icon {
  width: 44rpx;
  height: 44rpx;
}

.icon-btn {
  padding: 8rpx 10rpx;
  background: transparent;
  border: 0;
  line-height: 1;
}

.icon-btn::after {
  border: 0;
}

.icon-text {
  font-size: 34rpx;
  color: #3b3b3b;
}

.hero-card {
  position: relative;
  background: #efe6dd;
  border-radius: 18rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.hero-actions-left {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
}

.hero-actions-right {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

.hero-main {
  display: flex;
  gap: 16rpx;
  padding-top: 40rpx;
}

.hero-left {
  width: 304rpx;
}

.herb-image-wrap {
  background: #d8cebe;
  border-radius: 16rpx;
  overflow: hidden;
  width: 100%;
  height: 420rpx;
  position: relative;
}

.herb-image-inner {
  width: 100%;
  height: 100%;
  padding: 22rpx 20rpx 18rpx;
  box-sizing: border-box;
}

.herb-image {
  width: 100%;
  height: 100%;
}

.herb-title-row {
  padding-top: 16rpx;
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.herb-title {
  font-size: 30rpx;
  color: #2d2d2d;
  font-weight: 600;
}

.herb-subtitle {
  font-size: 24rpx;
  color: #5d5d5d;
}

.hero-right {
  flex: 1;
  min-width: 0;
}

.date-row {
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.date-day {
  font-size: 96rpx;
  line-height: 1;
  color: #202020;
  font-weight: 500;
}

.date-suffix {
  font-size: 28rpx;
  color: #3b3b3b;
  margin-left: 8rpx;
  margin-bottom: 10rpx;
}

.lunar-text {
  font-size: 22rpx;
  color: #666;
  text-align: right;
  margin-top: 8rpx;
}

.yi-ji {
  margin-top: 18rpx;
  padding: 14rpx 14rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.35);
}

.yi-ji-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin: 8rpx 0;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  flex: 0 0 auto;
}

.dot-yi {
  background: #b06b6b;
}

.dot-ji {
  background: #7a8aa2;
}

.yi-ji-label {
  width: 30rpx;
  color: #333;
  font-size: 22rpx;
  flex: 0 0 auto;
}

.yi-ji-items {
  font-size: 22rpx;
  color: #333;
  flex: 1 1 auto;
  min-width: 0;
}

.huangli-wrap {
  margin-top: 16rpx;
  border-radius: 14rpx;
  overflow: hidden;
  height: 170rpx;
  background: #d7ead9;
  border: 2rpx solid rgba(56, 139, 80, 0.25);
}

.huangli-image {
  width: 100%;
  height: 100%;
}

.huangli-placeholder {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 14rpx;
  box-sizing: border-box;
}

.huangli-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.huangli-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #2f7b45;
}

.huangli-title {
  font-size: 22rpx;
  color: #2f7b45;
  font-weight: 600;
}

.huangli-lines {
  margin-top: 12rpx;
}

.huangli-line {
  height: 10rpx;
  background: rgba(47, 123, 69, 0.18);
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.huangli-line.short {
  width: 70%;
}

.huangli-stamp {
  position: absolute;
  right: 12rpx;
  bottom: 12rpx;
  font-size: 22rpx;
  color: #2f7b45;
  border: 2rpx solid rgba(47, 123, 69, 0.45);
  border-radius: 12rpx;
  padding: 4rpx 10rpx;
  background: rgba(255, 255, 255, 0.5);
}
.hero-details {
  margin-top: 18rpx;
  background: rgba(255, 255, 255, 0.35);
  border-radius: 14rpx;
  padding: 16rpx 16rpx;
}

.detail-row {
  display: flex;
  gap: 12rpx;
  margin: 10rpx 0;
}

.bullet {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #a6b48b;
  margin-top: 10rpx;
  flex: 0 0 auto;
}

.detail-text {
  font-size: 22rpx;
  color: #2f2f2f;
  line-height: 34rpx;
  flex: 1 1 auto;
}

.todos-header {
  margin-top: 22rpx;
  background: #efe6dd;
  border-radius: 18rpx;
  padding: 18rpx 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.todos-title {
  font-size: 28rpx;
  color: #2d2d2d;
  font-weight: 600;
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  padding: 0;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.6);
  color: #2d2d2d;
  font-size: 38rpx;
  line-height: 56rpx;
  text-align: center;
}

.add-btn::after {
  border: 0;
}

.todos-empty {
  padding: 24rpx 12rpx 0;
}

.todos-empty-text {
  font-size: 24rpx;
  color: #777;
}

.todos-list {
  padding: 18rpx 0 0;
}

.todo-item {
  padding: 18rpx 18rpx;
  background: #efe6dd;
  border-radius: 18rpx;
  margin-top: 14rpx;
}

.todo-text {
  font-size: 26rpx;
  color: #2d2d2d;
}

.bottom-spacer {
  height: 170rpx;
}

.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  padding-bottom: env(safe-area-inset-bottom);
  background: rgba(246, 242, 239, 0.98);
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  display: flex;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  color: #6a6a6a;
}

.tab-active {
  color: #2d2d2d;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  position: relative;
}

.tab-text {
  font-size: 20rpx;
  line-height: 1;
}

.tab-icon-today {
  border-radius: 12rpx;
  border: 2rpx solid currentColor;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.tab-icon-today-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: currentColor;
}

.tab-icon-calendar {
  border-radius: 12rpx;
  border: 2rpx solid currentColor;
  box-sizing: border-box;
  overflow: hidden;
}

.tab-icon-calendar-top {
  height: 12rpx;
  background: currentColor;
  opacity: 0.9;
}

.tab-icon-calendar-body {
  height: calc(100% - 12rpx);
  background: transparent;
}

.tab-icon-me {
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.tab-icon-me-head {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 2rpx solid currentColor;
  position: absolute;
  top: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
}

.tab-icon-me-body {
  width: 28rpx;
  height: 18rpx;
  border: 2rpx solid currentColor;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  border-bottom: 0;
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
}
