page {
  background-color: #ffffff;
}

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  align-items: center;
  padding-top: 30rpx;
}

.group {
  display: flex;
  flex-direction: column;
  width: 640rpx;
}

.list-item {
  background-color: #F5EFE9;
  height: 118rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  font-size: 34rpx;
  color: #333;
  box-sizing: border-box;
}

.single-item {
  border-radius: 32rpx;
}

.first-item {
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
}

.last-item {
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
}

.divider {
  height: 1rpx;
  background-color: #F5EFE9;
  position: relative;
}
.divider::after {
    content: '';
    position: absolute;
    left: 40rpx;
    right: 40rpx;
    top: 0;
    height: 100%;
    background-color: rgba(0,0,0,0.08);
}

.arrow-icon {
  width: 18rpx;
  height: 18rpx;
  border-top: 4rpx solid #b0b0b0;
  border-right: 4rpx solid #b0b0b0;
  transform: rotate(45deg);
  margin-right: 8rpx;
}