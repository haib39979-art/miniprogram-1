.page {
  min-height: 100vh;
  background: #ffffff;
  padding: 0 45rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* Custom Header */
.custom-header {
  height: 88rpx; /* Standard nav bar height */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: env(safe-area-inset-top); /* Handle status bar */
  margin-bottom: 20rpx;
}

.icon-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.gear-icon, .share-icon {
  font-size: 40rpx;
  color: #333;
}

.share-icon {
  transform: rotate(-45deg); /* Adjust text arrow to look like plane */
}

/* Profile Section */
.profile-section {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.avatar-wrap {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 16rpx;
  background: #f0f0f0;
}

.avatar {
  width: 100%;
  height: 100%;
}

.username {
  font-size: 45rpx;
  font-weight: 600;
  color: #000;
  margin-bottom: 8rpx;
}

.userid {
  font-size: 24rpx;
  color: #999;
}

/* Tabs */
.tabs-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.tab-item {
  font-size: 36rpx;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #6d4c41; /* Brownish active color */
  font-weight: 500;
}

/* Health Card */
.health-card {
  background: #f5efe9; /* Beige background */
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  margin-bottom: 30rpx;
}

.health-card-left {
  width: 80rpx;
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-right: 1rpx solid rgba(0,0,0,0.05);
  padding-right: 16rpx;
}

.health-type {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.1;
  margin-bottom: 8rpx;
  writing-mode: vertical-lr; /* Vertical text */
  letter-spacing: 4rpx;
}

.health-subtitle {
  font-size: 24rpx;
  color: #666;
  writing-mode: vertical-lr;
  margin-left: 8rpx;
}

.health-card-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.guide-item {
  font-size: 24rpx;
  line-height: 1.4;
  display: flex;
}

.guide-label {
  color: #5d4037;
  font-weight: bold;
  flex-shrink: 0;
}

.guide-content {
  color: #5d4037;
}

/* Bottom Grid */
.bottom-grid {
  display: flex;
  gap: 24rpx;
  height: 320rpx;
}

.grid-left {
  flex: 1;
  border-radius: 24rpx;
  overflow: hidden;
}

.soup-image {
  width: 100%;
  height: 100%;
}

.grid-right {
  width: 300rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.grid-card {
  flex: 1 1 0%;
  border-radius: 24rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

/* Illustration Card */
.illustration-card {
  background: #fdf5e6; /* Base light beige */
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* Ground floor styling */
.illustration-card::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 35%;
  background: #dcc8ba; /* Darker beige for ground */
  z-index: 0;
}

.illustration-content {
  position: absolute;
  top: 24rpx;
  left: 20rpx;
  background: #fff; /* White bubble */
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  z-index: 2;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* Cat ears for bubble */
.illustration-content::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: 12rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #fff;
}
.illustration-content::after {
  content: '';
  position: absolute;
  top: -10rpx;
  right: 12rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #fff;
}

/* Thought bubbles dots */
.thought-dot-1 {
  position: absolute;
  bottom: -12rpx;
  right: 30rpx;
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 50%;
}
.thought-dot-2 {
  position: absolute;
  bottom: -24rpx;
  right: 14rpx;
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
}

.illustration-text {
  font-size: 20rpx;
  color: #333;
  line-height: 1.4;
  font-weight: 600;
  display: block;
}

.illustration-graphic {
  position: absolute;
  right: -10rpx;
  bottom: 0rpx;
  width: 140rpx;
  height: 140rpx;
  z-index: 1;
  mix-blend-mode: multiply; /* Remove white background */
}

.illustration-tag {
  position: absolute;
  bottom: 16rpx;
  left: 20rpx;
  background: rgba(255,255,255,0.9);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 16rpx;
  color: #5d4037;
  display: flex;
  align-items: center;
  gap: 4rpx;
  z-index: 2;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.leaf-icon {
  color: #8bc34a;
  font-size: 18rpx;
}

/* Days Card */
.days-card {
  background: linear-gradient(135deg, #a8c0ff 0%, #3f2b96 100%); /* Placeholder gradient */
  background: #9fa5d5; /* Simpler color match */
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.days-label {
  font-size: 20rpx;
  opacity: 0.8;
  align-self: flex-start;
}

.days-count {
  font-size: 64rpx;
  font-weight: bold;
  line-height: 1;
  margin: 10rpx 0;
}

.days-unit {
  font-size: 20rpx;
  opacity: 0.8;
  letter-spacing: 2rpx;
}

.days-date {
  position: absolute;
  right: -30rpx;
  bottom: 30rpx;
  font-size: 18rpx;
  transform: rotate(-90deg);
  opacity: 0.8;
}

/* Collect Tab Styles */
.section-header {
  margin: 30rpx 0 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #5D4037; /* Brownish */
}

.horizontal-scroll {
  display: flex;
  white-space: nowrap;
  width: 100%;
  padding-bottom: 20rpx; /* Space for shadow or just breathing room */
}

/* Recipe Card */
.recipe-card {
  display: inline-flex; /* For horizontal scroll */
  width: 600rpx;
  height: 260rpx;
  background-color: #FDF6F0; /* Light beige/pink */
  border-radius: 32rpx;
  padding: 24rpx;
  box-sizing: border-box;
  margin-right: 24rpx;
  position: relative;
  align-items: center;
}

.recipe-img {
  width: 212rpx;
  height: 212rpx;
  border-radius: 50%; /* Circle bowl */
  flex-shrink: 0;
  margin-right: 24rpx;
}

.recipe-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
}

.recipe-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.recipe-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.heart-icon {
  font-size: 32rpx;
  color: #999;
}

.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.tag-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.tag-dot {
  margin-right: 4rpx;
  font-weight: bold;
}

.recipe-suitable {
  font-size: 24rpx;
  color: #8D6E63; /* Brownish text */
}

/* Herb Card */
.herb-card {
  display: inline-block;
  width: 340rpx;
  height: 520rpx;
  background-color: #F5EFE9;
  border-radius: 32rpx;
  margin-right: 24rpx;
  position: relative;
  padding: 24rpx;
  box-sizing: border-box;
  vertical-align: top; /* Alignment fix for inline-block */
}

.herb-img {
  width: 100%;
  height: 260rpx; /* Top half */
  margin-top: 20rpx;
  margin-left: -50rpx; /* Shift left */
}

.herb-date-box {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.date-row {
  display: flex;
  align-items: baseline;
}

.date-day {
  font-size: 56rpx;
  font-weight: 300;
  color: #333;
  line-height: 1;
}

.date-month {
  font-size: 24rpx;
  color: #666;
}

.lunar-date {
  font-size: 20rpx;
  color: #999;
  margin: 4rpx 0 8rpx;
}

.yi-ji-row {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.dot.yi {
  background-color: #FF9B9B;
}

.dot.ji {
  background-color: #999999;
}

.yi-ji-text {
  font-size: 18rpx;
  color: #666;
}

.herb-info {
  margin-top: 10rpx;
}

.herb-name-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.herb-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.herb-alias {
  font-size: 22rpx;
  color: #999;
}

.herb-details {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.herb-detail-item {
  display: flex;
  font-size: 18rpx;
  color: #666;
  line-height: 1.4;
}

.detail-label {
  color: #333;
  font-weight: 500;
}

.detail-content {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.heart-icon-herb {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  font-size: 32rpx;
  color: #999;
}

/* Record Tab Styles (Screenshot 3) */
.record-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: space-between;
}

.record-item {
  width: 48%;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
}

.record-img {
  width: 100%;
  height: 300rpx;
  display: block;
}

.record-date {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
  color: #fff;
  font-size: 22rpx;
  padding: 16rpx;
  text-align: right;
}

.record-img {
  width: 100%;
  height: 320rpx; /* Square-ish or portrait */
  border-radius: 24rpx;
  margin-bottom: 10rpx;
}

.record-date {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  display: block;
}