<view class="container">
  <!-- Custom Navigation Bar -->
  <view class="nav-bar" style="padding-top: {{statusBarHeight}}px;">
    <view class="nav-content" style="height: {{navBarHeight}}px;">
      <view class="close-btn" bindtap="onClose">
        <text class="close-icon">✕</text>
      </view>
    </view>
  </view>

  <!-- Main Content -->
  <view class="main-content">
    <image class="big-avatar" src="{{avatarUrl}}" mode="aspectFill" />
  </view>

  <!-- Bottom Menu -->
  <view class="bottom-menu">
    <view class="menu-item" bindtap="onChangeAvatar">
      <text class="menu-text">更换头像</text>
      <view class="menu-icon">
        <image src="data:image/svg+xml;base64," style="width: 32rpx; height: 32rpx;" />
      </view>
    </view>
    <view class="menu-item" bindtap="onSaveAvatar">
      <text class="menu-text">保存头像</text>
      <view class="menu-icon">
        <image src="data:image/svg+xml;base64," style="width: 32rpx; height: 32rpx;" />
      </view>
    </view>
    <view class="menu-item" bindtap="onGetPendant">
      <text class="menu-text">获取挂件</text>
      <view class="menu-icon">
        <image src="data:image/svg+xml;base64," style="width: 32rpx; height: 32rpx;" />
      </view>
    </view>
  </view>
</view>