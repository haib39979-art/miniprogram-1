page {
  background: #ffffff;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  padding: 0 40rpx;
  padding-top: 180rpx; /* Fixed header space */
  padding-bottom: 60rpx;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 170rpx;
  background: #fff;
  z-index: 100;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 40rpx 20rpx;
  box-sizing: border-box;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 24rpx;
  height: 40rpx;
}

.title-icon {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 36rpx;
  font-weight: 500;
}

.title-svg {
  width: 40rpx;
  height: 40rpx;
}

.placeholder {
  width: 60rpx;
}

.date-scroll {
  width: 100%;
  white-space: nowrap;
  margin-top: 20rpx;
  height: 120rpx;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  margin-right: 40rpx;
  min-width: 60rpx;
}

.date-item:first-child {
  margin-left: 10rpx;
}

.date-item:last-child {
  margin-right: 40rpx;
}

.day-text {
  font-size: 26rpx;
  color: #666;
}

.date-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 50%;
}

.date-item.active .date-text {
  background: #E0A9A5;
  color: #fff;
}

.date-item.active .day-text {
  color: #333;
  font-weight: 500;
}

.full-date {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.chart-info-overlay {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  z-index: 10;
}

.humidity-level-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.humidity-level-num {
  font-size: 80rpx;
  font-weight: 300;
  line-height: 1;
}

.humidity-direction {
  font-size: 36rpx;
  color: #333;
  font-weight: 400;
}

.humidity-desc-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.chart-section {
  width: 100%;
  margin-top: 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chart-title-overlay {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

.chart-title-text {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.chart-container {
  width: 100%;
  height: auto;
  position: relative;
}

.chart-bg {
  width: 100%;
}

.chart-svg {
  width: 100%;
  display: block;
}

.summary-section {
  margin-top: 40rpx;
}

.summary-title {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: block;
}

.summary-box {
  background: #F2E6E6;
  padding: 30rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.divider {
  height: 1rpx;
  background: #eee;
  margin: 20rpx 0;
}
