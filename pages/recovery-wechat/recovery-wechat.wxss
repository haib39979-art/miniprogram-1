page {
  background-color: #ffffff;
}

.container {
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-box {
  background-color: #F5EFE9;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 300rpx;
}

.info-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.confirm-btn {
  width: 100%;
  height: 100rpx;
  background-color: #E9D9D2;
  color: #4A2E1F;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: auto;
  position: absolute;
  bottom: 100rpx;
  left: 32rpx;
  right: 32rpx;
  width: auto;
}
