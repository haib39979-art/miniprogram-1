page {
  background-color: #ffffff;
}

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  align-items: center; /* Center everything */
  padding-top: 30rpx;
}

.group {
  display: flex;
  flex-direction: column;
  width: 640rpx; /* Narrower per feedback */
}

.list-item {
  background-color: #F5EFE9; /* Beige */
  height: 118rpx; /* Match design height */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx; /* Slightly more padding inside */
  font-size: 34rpx; /* Slightly larger font */
  color: #333;
  box-sizing: border-box;
}

.single-item {
  border-radius: 32rpx; /* More rounded */
}

.first-item {
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
}

.last-item {
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
}

.divider {
  height: 1rpx;
  background-color: #F5EFE9; /* Match item bg */
  position: relative;
}
.divider::after {
    content: '';
    position: absolute;
    left: 40rpx; /* Align with text padding */
    right: 40rpx;
    top: 0;
    height: 100%;
    background-color: rgba(0,0,0,0.08); /* Faint separator line */
}

.arrow-icon {
  width: 18rpx;
  height: 18rpx;
  border-top: 4rpx solid #b0b0b0; /* Thicker, lighter grey */
  border-right: 4rpx solid #b0b0b0;
  transform: rotate(45deg);
  margin-right: 8rpx;
}

.centered-item {
  justify-content: center;
}

.centered-item .item-text {
  font-weight: 500;
  color: #333;
}

.centered-item .logout-text {
  color: #fa5151;
}