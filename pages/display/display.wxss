page {
  background-color: #ffffff;
}

.container {
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.group-title {
  width: 640rpx;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
  margin-top: 24rpx;
}

.group-title:first-child {
  margin-top: 0;
}

.group {
  display: flex;
  flex-direction: column;
  width: 640rpx;
  margin-bottom: 20rpx;
}

.list-item {
  background-color: #F5EFE9;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.single-item {
  border-radius: 32rpx;
}

.first-item {
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
}

.last-item {
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
}

.divider {
  height: 1rpx;
  background-color: #F5EFE9;
  position: relative;
}

.divider::after {
  content: '';
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  top: 0;
  height: 100%;
  background-color: rgba(0,0,0,0.08);
}

.font-slider-container {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 0 10rpx;
}

.font-slider {
  flex: 1;
  margin: 0 30rpx;
}

.font-label {
  color: #333;
  font-weight: bold;
}

.font-label.small {
  font-size: 24rpx;
}

.font-label.large {
  font-size: 40rpx;
}