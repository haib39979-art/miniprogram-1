page {
  background: #ffffff;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  padding: 0 40rpx; /* Increased padding slightly */
  padding-top: 200rpx; /* Add space for fixed header */
  padding-bottom: 120rpx;
}

/* Header */
.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: #ffffff;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: flex-end; /* Align to bottom of header area */
  height: 188rpx; /* Status bar (~100rpx) + Nav bar (88rpx) */
  padding-bottom: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.header-left, .header-right {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow {
  width: 24rpx;
  height: 40rpx;
}

.menu-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-lines {
  width: 48rpx;
  height: 48rpx;
}

/* Location Row */
.location-row {
  width: 634rpx;
  margin: 0 auto 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center; /* Center vertically */
}

.location-info {
  display: flex;
  flex-direction: column;
}

.location-main {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.2;
  letter-spacing: 1rpx;
}

.location-sub {
  font-size: 56rpx;
  color: #333;
  font-weight: 600;
  margin-top: 10rpx;
  letter-spacing: 2rpx;
}

.location-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  font-family: 'Times New Roman', serif;
  font-style: italic;
  letter-spacing: 1rpx;
}

.map-box {
  width: 280rpx;
  height: 180rpx;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.map-bg {
  width: 100%;
  height: 100%;
}

/* Weather Card */
.weather-card {
  width: 634rpx;
  height: 340rpx;
  background: #FDF0E6;
  border-radius: 40rpx;
  padding: 40rpx;
  margin: 0 auto 50rpx; /* Center horizontally */
  box-shadow: 0 10rpx 30rpx rgba(253, 246, 236, 0.5);
  box-sizing: border-box; /* Ensure padding includes within width/height */
  position: relative;
  overflow: visible;
}

.weather-content {
  width: 100%;
  height: 100%;
}

.weather-icon-section {
  position: static;
}

.sun-icon {
  position: absolute;
  width: 360rpx;
  height: 360rpx;
  top: -60rpx;
  left: -60rpx;
  z-index: 0;
}

.weather-status {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  text-align: left;
  z-index: 1;
}

.status-main {
  display: block;
  font-size: 36rpx;
  font-style: italic;
  font-family: 'Times New Roman', serif;
  color: #8D6E63;
  line-height: 1;
}

.status-sub {
  display: block;
  font-size: 24rpx;
  color: #8D6E63;
  font-style: italic;
  font-family: 'Times New Roman', serif;
  margin-top: 4rpx;
  opacity: 0.8;
}

.weather-info-section {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: 1;
}

.weather-temp {
  font-size: 140rpx; /* Larger temp */
  font-weight: 400;
  color: #333;
  line-height: 1;
  margin-right: 0;
  font-family: sans-serif;
}

.weather-feels-like {
  font-size: 26rpx;
  color: #333333;
  margin-top: 10rpx;
  font-weight: 400;
}

.weather-range {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  min-width: 200rpx; /* Ensure spacing */
}

.range-text {
  font-size: 32rpx;
  color: #5D4037;
  font-weight: 500;
}

/* Stats Grid */
.stats-grid {
  width: 634rpx;
  margin: 0 auto 60rpx;
  display: flex;
  justify-content: center; /* Restore center alignment */
  gap: 62rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.stat-icon-box {
  width: 140rpx;
  height: 140rpx;
  background: #F5E6E0;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-icon {
  width: 64rpx;
  height: 64rpx;
}

.stat-label {
  font-size: 30rpx;
  color: #5D4037;
  font-weight: 500;
}

/* Forecast Section */
.forecast-section {
  width: 634rpx;
  margin: 0 auto 40rpx;
}

.forecast-title {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 30rpx;
  padding-left: 0; /* Remove padding to align with card */
}

.title-zh {
  font-size: 48rpx; /* Increased size */
  font-weight: 600;
  color: #333;
}

.title-en {
  font-size: 36rpx; /* Increased size */
  color: #999;
  font-family: 'Times New Roman', serif;
  font-style: italic;
}

.forecast-scroll {
  white-space: nowrap;
  width: 100%;
  height: 240rpx; /* Explicit height for scroll-view */
}

.forecast-scroll ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.forecast-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  width: 120rpx;
  height: 200rpx;
  background: #EFF5EB; /* Greenish default */
  border-radius: 60rpx;
  gap: 20rpx;
  transition: all 0.3s;
  flex-shrink: 0;
  vertical-align: top;
}

.forecast-item.active {
  background: #EFF5EB; /* Same as default in design draft */
  transform: scale(1.02);
}

.forecast-time {
  font-size: 24rpx;
  color: #556B2F;
  font-weight: 500;
}

.forecast-icon-box {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.forecast-icon {
  width: 40rpx;
  height: 40rpx;
}

.forecast-temp {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.bottom-spacer {
  height: 40rpx;
}
