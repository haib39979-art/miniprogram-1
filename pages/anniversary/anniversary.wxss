.container {
  min-height: 100vh;
  background: #FCFBF9; /* White with a hint of beige */
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.nav-bar {
  /* No fixed positioning, let it flow */
  width: 100%;
  display: flex;
  /* padding-top set inline in WXML via statusBarHeight */
  margin-bottom: 20rpx; 
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  border: 1rpx solid rgba(0,0,0,0.05);
  margin-top: 40rpx; /* Increased top margin */
}

.back-icon {
  font-size: 40rpx;
  color: #5d4037; /* Darker brown for better contrast */
  font-weight: 300;
  padding-bottom: 6rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* Center card vertically */
  padding-bottom: 100rpx; /* Offset for visual balance */
}

.card {
  width: 600rpx; /* Fixed width for consistent square look */
  height: 600rpx; /* Force square */
  background: #E9D9D2; /* User requested color */
  border-radius: 40rpx;
  padding: 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* Center content inside square */
  position: relative;
  box-shadow: 0 20rpx 40rpx rgba(109, 76, 65, 0.15); /* Soft shadow for depth */
}

.header {
  font-size: 32rpx;
  color: #8D6E63; /* Adjusted for contrast on E9D9D2 */
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.days-display {
  display: flex;
  align-items: baseline;
  margin-bottom: 40rpx;
  color: #5D4037; /* Darker brown */
}

.days-number {
  font-size: 160rpx; /* Larger number */
  font-weight: bold;
  line-height: 1;
}

.days-unit {
  font-size: 32rpx;
  margin-left: 12rpx;
  font-weight: 500;
  opacity: 0.8;
}

.divider {
  display: none; /* Remove divider for cleaner look */
}

.date-section {
  width: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.date-label {
  font-size: 24rpx;
  color: #8D6E63; /* Adjusted for contrast */
  letter-spacing: 2rpx;
}

.date-value-wrap {
  display: flex;
  align-items: center;
  background: transparent; /* Remove bg */
  padding: 0;
  border: none; /* Remove border */
}

.date-value {
  font-size: 36rpx;
  color: #5D4037; /* Dark brown */
  font-weight: 500;
  font-family: 'Courier New', Courier, monospace;
  border-bottom: 2rpx dashed #8D6E63; /* Dashed underline for edit hint */
  padding-bottom: 4rpx;
}

.edit-btn {
  display: none; /* Hide explicit button, use text styling to imply edit */
}

.quote {
  margin-top: 60rpx;
  font-size: 26rpx;
  color: #a1887f; /* Muted brown */
  letter-spacing: 6rpx;
  font-style: normal;
  text-transform: uppercase;
  opacity: 0.9;
}