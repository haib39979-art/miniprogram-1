.page {
  min-height: 100vh;
  background: #f6f2ef;
  padding-bottom: 40rpx;
}

.hero-image-wrap {
  width: 100%;
  height: 500rpx;
  background: #d9cfbf;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-image {
  width: 60%;
  height: 80%;
}

.content {
  padding: 40rpx 32rpx;
}

.header {
  margin-bottom: 40rpx;
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.title {
  font-size: 48rpx;
  color: #2d2d2d;
  font-weight: 600;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 30rpx;
  color: #2d2d2d;
  font-weight: 600;
  margin-bottom: 12rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 8rpx;
  height: 24rpx;
  background: #b06b6b;
  border-radius: 4rpx;
}

.section-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}