page {
  background-color: #ffffff;
}

.container {
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
  margin-top: 10rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.group {
  width: 640rpx;
  background-color: #F5EFE9;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 118rpx;
  padding: 0 40rpx;
  background-color: transparent;
}

.item-text {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.arrow-icon {
  width: 18rpx;
  height: 18rpx;
  border-top: 4rpx solid #b0b0b0;
  border-right: 4rpx solid #b0b0b0;
  transform: rotate(45deg);
}

.divider {
  height: 1rpx;
  background-color: rgba(0,0,0,0.05);
  margin: 0 40rpx;
}