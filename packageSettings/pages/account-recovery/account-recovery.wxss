page {
  background-color: #ffffff;
}

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}

.list-container {
  background-color: #F5EFE9;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  width: 640rpx;
  overflow: hidden; /* Ensure children don't overflow rounded corners */
}

.list-item {
  height: 118rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  position: relative; /* For divider positioning */
}

/* Add divider using pseudo-element for items except the last one */
.list-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  bottom: 0;
  height: 1rpx;
  background-color: rgba(0,0,0,0.08);
}

.item-text {
  font-size: 34rpx;
  color: #333;
}

.arrow-icon {
  width: 18rpx;
  height: 18rpx;
  border-top: 4rpx solid #b0b0b0;
  border-right: 4rpx solid #b0b0b0;
  transform: rotate(45deg);
  margin-right: 8rpx;
}
