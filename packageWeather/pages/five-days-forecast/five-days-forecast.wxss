page {
  background: #f6f2ef;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  padding: 0 30rpx;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-top: 220rpx; /* Push content down */
}

.header {
  position: fixed; /* Fix to top */
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx; /* Increased height */
  display: flex;
  align-items: flex-end;
  padding-bottom: 20rpx;
  padding-left: 30rpx; /* Match container padding */
  z-index: 1000; /* Ensure on top */
  background-color: #f6f2ef; /* Match bg to cover scrolling content */
}

.back-btn {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-right: 20rpx;
}

.back-btn:active {
  opacity: 0.7;
}

.back-arrow-img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 0;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  margin-left: 10rpx;
  margin-bottom: 20rpx; /* Align with back button center visually */
}

.forecast-list {
  flex: 1;
  width: 100%;
}

.forecast-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.forecast-item.today {
  background: #FDF0E6;
  border: 2rpx solid #E8D5C4;
}

.date-col {
  display: flex;
  flex-direction: column;
  width: 140rpx;
}

.week-day {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.date-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.icon-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.weather-icon {
  width: 64rpx;
  height: 64rpx;
}

.status-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

.temp-col {
  display: flex;
  align-items: center;
  gap: 16rpx;
  width: 180rpx;
  justify-content: flex-end;
}

.temp-high {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.temp-low {
  font-size: 36rpx;
  color: #999;
}

.temp-bar {
  width: 2rpx;
  height: 24rpx;
  background: #ddd;
}